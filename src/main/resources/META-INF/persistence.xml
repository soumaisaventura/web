<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">

	<persistence-unit name="pu" transaction-type="JTA">
		<jta-data-source>java:jboss/datasources/PostgreSQLDS</jta-data-source>

		<class>adventure.entity.User</class>
		<class>adventure.entity.Profile</class>
		<class>adventure.entity.Health</class>
		<class>adventure.entity.Event</class>
		<class>adventure.entity.EventOrganizer</class>
		<class>adventure.entity.EventRegistrationStatusByDay</class>
		<class>adventure.entity.Race</class>
		<class>adventure.entity.RaceModality</class>
		<class>adventure.entity.RaceCategory</class>
		<class>adventure.entity.RaceFee</class>
		<class>adventure.entity.Status</class>
		<class>adventure.entity.Championship</class>
		<class>adventure.entity.ChampionshipFee</class>
		<class>adventure.entity.ChampionshipRace</class>
		<class>adventure.entity.Sport</class>
		<class>adventure.entity.Modality</class>
		<class>adventure.entity.RegistrationPeriod</class>
		<class>adventure.entity.Category</class>
		<class>adventure.entity.Registration</class>
		<class>adventure.entity.Fee</class>
		<class>adventure.entity.UserRegistration</class>
		<class>adventure.entity.Country</class>
		<class>adventure.entity.State</class>
		<class>adventure.entity.City</class>

		<exclude-unlisted-classes>true</exclude-unlisted-classes>

		<properties>
			<property name="hibernate.show_sql" value="true" />
			<property name="hibernate.format_sql" value="false" />
			<property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect" />
			<property name="hibernate.transaction.jta.platform" value="org.hibernate.service.jta.platform.internal.JBossAppServerJtaPlatform" />

			<property name="hibernate.hbm2ddl.auto" value="validate" />
			<!--
			<property name="hibernate.hbm2ddl.auto" value="create-drop" />
			<property name="hibernate.hbm2ddl.auto" value="update" />
			-->

		</properties>
	</persistence-unit>

</persistence>