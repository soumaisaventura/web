<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE urlrewrite
    PUBLIC "-//tuckey.org//DTD UrlRewrite 4.0//EN"
    "http://www.tuckey.org/res/dtds/urlrewrite4.0.dtd">
<urlrewrite>

	<!--
	<rule>
		<from>(.+)\.html</from>
		<set type="status">404</set>
		<to>null</to>
	</rule>
	-->

	<rule>
		<from>^/$</from>
		<to type="permanent-redirect">/home</to>
	</rule>

	<rule>
		<from>^/home$</from>
		<to>/home.jsf</to>
	</rule>
	<rule>
		<from>^/teste$</from>
		<to>/teste.jsf</to>
	</rule>

	<rule>
		<from>^/inicio$</from>
		<to>/home.jsf</to>
	</rule>
	<!--
	<outbound-rule>
		<from>^/home.jsf$</from>
		<to>/home</to>
	</outbound-rule>
	-->

	<rule>
		<from>^/login$</from>
		<to>/login.jsf</to>
	</rule>

	<rule>
		<from>^/registro$</from>
		<to>/signup.jsf</to>
	</rule>
	<rule>
		<from>^/registre-se$</from>
		<to type="permanent-redirect">/registro</to>
	</rule>
	<rule>
		<from>^/signup$</from>
		<to type="permanent-redirect">/registro</to>
	</rule>

	<rule>
		<from>^/recupera-senha$</from>
		<to>/password-recovery.jsf</to>
	</rule>
	<rule>
		<from>^/password/recovery$</from>
		<to>/password-recovery.jsf</to>
	</rule>

	<rule>
		<from>^/password/reset$</from>
		<to>/password-reset.jsf</to>
	</rule>

	<rule>
		<from>^/user/activation$</from>
		<to>/user-activation.jsf</to>
	</rule>

	<rule>
		<from>^/atleta/pessoal$</from>
		<to>/user-profile.jsf</to>
	</rule>
	<rule>
		<from>^/user/profile$</from>
		<to type="permanent-redirect">/atleta/pessoal</to>
	</rule>

	<rule>
		<from>^/atleta/saude$</from>
		<to>/user-health.jsf</to>
	</rule>
	<rule>
		<from>^/user/health$</from>
		<to type="permanent-redirect">/atleta/saude</to>
	</rule>

	<rule>
		<from>^/atleta/inscricoes$</from>
		<to>/registration-list.jsf</to>
	</rule>
	<rule>
		<from>^/minhas-inscricoes$</from>
		<to type="permanent-redirect">/atleta/inscricoes</to>
	</rule>
	<rule>
		<from>^/registration/list$</from>
		<to type="permanent-redirect">/atleta/inscricoes</to>
	</rule>

	<rule>
		<from>^/registration$</from>
		<to>/registration.jsf</to>
	</rule>

	<!--
	<rule>
		<from>^/registration/(\d+)/public$</from>
		<to>/registration-public.jsf?registration=$1</to>
	</rule>
	-->

	<rule>
		<from>^/inscricao/(\d+)$</from>
		<to>/registration.jsf?registration=$1</to>
	</rule>
	<rule>
		<from>^/registration/(\d+)$</from>
		<to type="permanent-redirect">/inscricao/$1</to>
	</rule>

	<rule>
		<from>^/calendario/(\d+)$</from>
		<to>/calendario.jsf?ano=$1</to>
	</rule>
	<rule>
		<from>^/race/next$</from>
		<to type="permanent-redirect">/calendario/2015</to>
	</rule>
	<rule>
		<from>^/provas$</from>
		<to type="permanent-redirect">/calendario/2015</to>
	</rule>

	<rule>
		<from>^/prova/(\d+)/painel$</from>
		<to>/prova-painel.jsf?id=$1</to>
	</rule>

	<rule>
		<from>^/prova/(\d+)/painel/inscricoes$</from>
		<to>/race-registration-list.jsf?race=$1</to>
	</rule>
	<rule>
		<from>^/race/(\d+)/registration/list$</from>
		<to type="permanent-redirect">/prova/$1/painel/inscricoes</to>
	</rule>

	<rule>
		<from>^/prova/(\d+)/inscricao$</from>
		<to>/prova-inscricao.jsf?id=$1</to>
	</rule>
	<rule>
		<from>^/race/(\d+)/registration$</from>
		<to type="permanent-redirect">/prova/$1/inscricao</to>
	</rule>

	<rule>
		<from>^/prova/(\d+)$</from>
		<to>/prova.jsf?id=$1</to>
	</rule>
	<rule>
		<from>^/race/(\d+)$</from>
		<to type="permanent-redirect">/prova/$1</to>
	</rule>

	<rule>
		<from>^/close$</from>
		<to>/close.html</to>
	</rule>

	<!-- V2 Init -->
	<rule>
		<from>^/v2/home$</from>
		<to>/v2/home.jsf</to>
	</rule>

	<rule>
		<from>^/v2/login$</from>
		<to>/v2/login.jsf</to>
	</rule>

	<rule>
		<from>^/v2/recupera-senha$</from>
		<to>/v2/senha-recuperacao.jsf</to>
	</rule>

	<rule>
		<from>^/v2/registre-se$</from>
		<to>/v2/registro.jsf</to>
	</rule>
	<!-- V2 End -->

	<rule>
		<from>^/(.+)/$</from>
		<to type="permanent-redirect">%{context-path}/$1</to>
	</rule>

</urlrewrite>